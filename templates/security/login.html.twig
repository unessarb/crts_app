{% extends 'layouts/layout.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}

<div class="login-box">
  <div class="login-logo">
	<img src='{{ asset('/dist/img/crts.png') }}' width="70%"/>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Connectez-vous</p>
	  {% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	  {% endif %}
      <form method="post">
        <div class="input-group mb-3">
          <input value="{{ last_username }}" name="email" id="email"required autofocus class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" name="password" id="password" required class="form-control" placeholder="Mot de passe">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-7">
            <div class="icheck-primary">
              <input type="checkbox" name="_remember_me" id="remember_me">
              <label for="remember_me">
                Souviens-toi de moi
              </label>
            </div>
          </div>
		  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          <!-- /.col -->
          <div class="col-5">
            <button type="submit" class="btn btn-primary btn-block">Connexion</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <p class="mt-3 text-center">
        <a href="{{ path('app_forgot_password_request') }}">J'ai oubli√© mon mot de passe</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>


{% endblock %}
