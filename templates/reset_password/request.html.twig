{% extends 'layouts/layout.html.twig' %}

{% block title "Réinitialisez votre mot de passe" %}

{% block body %}
	<div class="login-box">
		<div class="login-logo">
			<img src='{{ asset('/dist/img/crts.png') }}' width="70%"/>
		</div>
		<!-- /.login-logo -->
		<div class="card">
			<div class="card-body login-card-body">
				<p class="login-box-msg">Réinitialisez votre mot de passe</p>
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small class="text-muted text-center">
						Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
					</small>
				</div>

				<button class="btn btn-primary btn-block btn-lg ">Envoyer</button>
				{{ form_end(requestForm) }}
				<p class="mt-3 text-center">
					<a href="{{path('app_login')}}">Connectez-vous</a>
				</p>
			</div>
			<!-- /.login-card-body -->
		</div>
	</div>
{% endblock %}
