




{% extends 'layouts/base.html.twig' %}

{% block title 'Modifier Recette' %}

{% block body %}

	<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Modifier recette</h1>
          </div>
		   <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('recette_index') }}">Recettes</a></li>
              <li class="breadcrumb-item active">Modifier Recette</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
	<!-- Main content -->
    <section class="content">
	{{ form_start(form) }}
		<div class="row">
			<div class="col-md-6">
				<div class="card card-primary">
				<div class="card-body">
					{{ form_row(form.numCC) }}
					{{ form_row(form.typeRecette) }}
					{{ form_row(form.dateRecette, { attr:{ class:'js-datepicker' } }) }}
					{{ form_row(form.partieversantes) }}
					{{ form_row(form.natureRecette) }}

					{{ form_row(form.montant) }}

					{{ form_row(form.obs) }}
					
				</div>
				<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
			

		</div>
				<div class="card card-secondary">
			<div class="card-body">
				<div class="row" id="fichierL3">
					<div class="col-6">
						{{ form_row(form.documentNotifFile) }}
					</div>
					<div class="col-6">
						{{ form_row(form.documentOrdreFile) }}
					</div>
				</div>
				<div class="row" id="fichierL1">
					<div class="col-6">
						{{ form_row(form.documentPassationFile) }}
					</div>
					<div class="col-6">
						{{ form_row(form.documentExecutionFile) }}
					</div>
				</div>
				<div class="row" id="fichierL2">
					<div class="col-6">
						{{ form_row(form.documentAutreFile) }}
					</div>
					<div class="col-6">
						{{ form_row(form.documentBonFile) }}
					</div>
				</div>
			</div>
		<!-- /.card-body -->
		</div>
          <!-- /.card -->
        
      <div class="row">
        <div class="col-12">
          <a href="{{ path('recette_index') }}" class="btn btn-secondary mb-5">Annuler</a>
          <input type="submit" value="Enregistrer" class="btn btn-primary float-right" formnovalidate>
        </div>
      </div>
	  {{ form_end(form) }}
    </section>
    <!-- /.content -->

	
				
			

{% endblock %}
{% block javascript %}

    <script>
        $(document).ready(function() {
            // you may need to change this code if you are not using Bootstrap Datepicker
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>


	 <script>

	
	


		
        $(document).ready(function() {

			setTimeout(function(){
 var recette="{{recette.typeRecette}}";
 console.log(recette);

			if( recette.includes("Directe"))
			{
					$('#fichierL1').show();
					$('#fichierL2').show();
					$('#fichierL3').hide();
			}
			else
				{
					
					$('#fichierL1').hide();
					$('#fichierL2').hide();
					$('#fichierL3').show();
				
				}
}, 2);
			
	

            // you may need to change this code if you are not using Bootstrap Datepicker
            $('#recette_typeRecette').on('change', function() {
				
				if(this.value.includes("Directe"))
				{
					
					$('#fichierL1').show();
					$('#fichierL2').show();
					$('#fichierL3').hide();
					
					
				}
				else
				{
					$('#fichierL1').hide();
					$('#fichierL2').hide();
					$('#fichierL3').show();
				
				}
            });
        });
    </script>

{% endblock %}
