{% extends 'layouts/base.html.twig' %}

{% block title 'Tableau de bord' %}

{% block body %}

<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="container-fluid">
	<div class="row mb-2">
		<div class="col-sm-6">
			<h1 class="m-0">Tableau de bord</h1>
		</div><!-- /.col -->
		
	</div><!-- /.row -->
	</div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
	<div class="container-fluid">
		<!-- Small boxes (Stat box) -->
		<div class="row">
			
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-success">
					<div class="inner">
					<h3>{{ countMarche }}</h3>

					<p>Marchés Unique / Cadre</p>
					</div>
					<div class="icon">
					<i class="ion ion-stats-bars"></i>
					</div>
					<a href="{{ path('app_marches') }}" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<!-- ./col -->
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-warning">
					<div class="inner">
					<h3>{{ countBonCmd }}</h3>

					<p>Bon Commandes</p>
					</div>
					<div class="icon">
					<i class="ion ion-person-add"></i>
					</div>
					<a href="{{ path('app_bon_commandes') }}" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<!-- ./col -->
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-danger">
					<div class="inner">
					<h3>{{ countContrat }}</h3>

					<p>Contrats - Conventions</p>
					</div>
					<div class="icon">
					<i class="ion ion-pie-graph"></i>
					</div>
					<a href="{{ path('app_contrats') }}" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<!-- ./col -->
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-info">
					<div class="inner">
					<h3>{{ countSociete }}</h3>

					<p>Nombre de sociétés</p>
					</div>
					<div class="icon">
					<i class="ion ion-bag"></i>
					</div>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('app_societes') }}" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>
					{% else %}
						<a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>

					{% endif %}
				</div>
			</div>
			<!-- ./col -->
		</div>
		<!-- /.row -->


			<div class="row mb-2">
			<div class="col-sm-2">
			</div>
		<div class="col-sm-8">


		         <!-- DONUT CHART -->
            <div class="card card-danger">
              <div class="card-header">
                <h3 class="card-title">Donut Chart</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
			  <center>
			  		<select id="marche_unique_tfs" class="select2bs4" tabindex="-1" aria-hidden="true" style="width:300px;">
		<option value="" selected="selected">Selectionner l'année</option>
		{% for i in 2000..2040 %}
<option value="{{i}}">{{i}}</option><br>
{% endfor %}

		</select>
		</center>
		
                <canvas id="donutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
			</div>
			<!-- ./col -->
		</div>
		<!-- /.row -->


	</div><!-- /.container-fluid -->

</section>
<!-- /.content -->





{% endblock %}

{% block javascript %}
<script>
$("#marche_unique_tfs").on('change', function() {
  //alert( this.value );

$.ajax('/graphique/'+this.value, {
    type: 'GET',  // http method
    success: function (data, status, xhr) {
        console.log(data);
		console.log(donutData.datasets);
		donutData.datasets[0]['data']=data;
		chart.update();
		
    },
    error: function (jqXhr, textStatus, errorMessage) {
            console.log('Error' + errorMessage);
    }
});
});

</script>

<script>
 //-------------
    //- DONUT CHART -
    //-------------
    // Get context with jQuery - using jQuery's .get() method.
    var donutChartCanvas = $('#donutChart').get(0).getContext('2d')
    var donutData        = {
      labels: [
          'Marchés',
          'Bon de Commande',
          'CDC/Convention',
      ],
      datasets: [
        {
          data: [700,500,400],
          backgroundColor : ['#f56954', '#00a65a', '#f39c12', '#00c0ef', '#3c8dbc', '#d2d6de'],
        }
      ]
    }
    var donutOptions     = {
      maintainAspectRatio : false,
      responsive : true,
    }
    //Create pie or douhnut chart
    // You can switch between pie and douhnut using the method below.
    var chart=new Chart(donutChartCanvas, {
      type: 'doughnut',
      data: donutData,
      options: donutOptions
    })


</script>
{% endblock %}


   