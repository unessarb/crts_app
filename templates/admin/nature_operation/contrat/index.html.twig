{% extends 'layouts/base.html.twig' %}

{% block title 'Nature opération contrat' %}

{% block body %}

	<!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-8">
            <h1>Nature opération contrat</h1>
          </div>
          <div class="col-sm-4 text-right">
            <a role="link" href="{{path('app_new_nature_operation_contrat')}}" type="button" class="btn btn-primary "><i class="fa fa-plus"></i> Nouvelle nature opération</a>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

     <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>TFS</th>
                    <th>Nature Opération</th>
                    <th>Code</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                    {% for item in operations %}
                        <tr>
                            <td>{{item.tfs.code}}</td>                        
                            <td>{{item.natureOperation}}</td>                        
                            <td>{{item.code}}</td>                        
                            <td>
                                <a class="btn btn-info btn-sm" href="{{ path('app_edit_nature_operation_contrat', {id: item.id}) }}">
                                    <i class="fas fa-pencil-alt"></i>
                                    Edit
                                </a>  
                                <a href="#" 
                                onclick="event.preventDefault(); confirm('Êtes-vous sûre') && document.getElementById('js-societe-delete-form').submit();" 
                                class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                    Supprimer
                                </a>

                                <form id="js-societe-delete-form" action="{{ path('app_delete_nature_operation_contrat', {id: item.id}) }}" method="post" style="display: none;">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token('contrat_deletion_' ~ item.id) }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                </form> 
                            </td>                        
                        </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->


{% endblock %}
